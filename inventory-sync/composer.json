{
    "name": "shifa/inventory-sync",
    "description": "Inventory synchronization service",
    "type": "project",
    "require": {
        "php": "^8.2",
        "elasticsearch/elasticsearch": "^8.17",
        "guzzlehttp/guzzle": "^7.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
